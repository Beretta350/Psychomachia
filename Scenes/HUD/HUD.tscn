script/source = "extends CanvasLayer

onready var life_bar = $LifeBar/TextureProgress
onready var knife = $Knife
onready var bow = $Bow
onready var death_message = $DeathMessage
onready var pause_menu = $PauseMenu

var player = null
var pause = false

func _ready():
	death_message.visible = false
	pause_menu.visible = false
	add_to_group(\"HUD\")

func _process(delta):
	if(Input.is_action_just_pressed(\"ui_cancel\")) and !get_tree().paused and !pause:
		pause_menu.visible = true
		get_tree().paused = true
		pause = true
		$PauseMenu/Continue.grab_focus()
	elif(Input.is_action_just_pressed(\"ui_cancel\")) and get_tree().paused and pause:
		pause = false
		pause_menu.visible = false
		get_tree().paused = false
	if player != null:
		life_bar.value = player.life
		if player.dead:
			death_message.visible = true
			if(Input.is_action_just_pressed(\"ui_accept\")):
				death_message.visible = false
				get_tree().paused = false
				player.respawn()
		if player.bow_equip:
			bow.show()
			knife.hide()
		else:
			bow.hide()
			knife.show()
	else:
		life_bar.value = 100

func set_player(p):
	player = p


func _on_Continue_pressed():
	pause = false
	get_tree().paused = false
	pause_menu.visible = false


func _on_Exit_pressed():
	$FadeIn.show()
	$FadeIn.fade_in()


func _on_FadeIn_fade_finished():
	get_tree().paused = false
	get_tree().change_scene(\"res://Scenes/Menus/Main/Menu.tscn\")
"

